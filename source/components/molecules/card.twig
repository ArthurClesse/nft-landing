{% macro card(img, owner, creator) %}
    <div class="card">
        <div class="card__hero">
            <div class="card__header">
                <div class="card__headerLeft">
                    <span class="owner">
                        <img src="../../assets/media/{{ owner }}" alt="">
                    </span>
                    <div class="card__owned">
                        <p class="card__littleWord">Owned by</p>
                        <p class="card__code">5811EX</p>
                    </div>
                </div>
                <div class="card__headerRight">
                    <div class="card__created">
                        <p class="card__littleWord">Created by</p>
                        <p class="card__code">45TY87</p>
                    </div>
                    <span class="creator">
                        <img src="../../assets/media/{{ creator }}" alt="">
                    </span>
                </div>
            </div>
            <div class="card__img">
                <img src="../../assets/media/{{ img }}" alt="">
            </div>
        </div>
        <div class="card__price">
            <p><span class="price">Price:</span> ETH 5.65 - X1</p>
            <p>=</p>
            <p>($10,344)</p>
        </div>
        <div class="card__bottom">
            <a href="#" class="card__history">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M13.5508 17.28L17.2708 21L20.9908 17.28" stroke="#292D32" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M17.2695 10.01V21" stroke="#292D32" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M17.2695 3V5.98999" stroke="#292D32" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M10.4498 6.71997L6.72974 3L3.00977 6.71997" stroke="#292D32" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M6.73047 3V14.09" stroke="#292D32" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M6.73047 21V18.03" stroke="#292D32" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                View history
            </a>
            <a href="#" class="card__buy">
                Buy Now
            </a>
        </div>
    </div>
{% endmacro %}